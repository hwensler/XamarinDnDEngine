<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App11.Views.ScorePage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Clear HighScores" Clicked="clearHighScores" />
    </ContentPage.ToolbarItems>
    <StackLayout>
        <ListView x:Name="PostView"
				ItemsSource="{Binding}" 
                ItemSelected ="onSelected"
                VerticalOptions = "LayoutOptions.Fill">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout>
                            <Label Text="{Binding Name, StringFormat='Name: {0:F0}'}"
                                   LineBreakMode="NoWrap"
                                   FontSize="16"/>
                            <Label Text="{Binding currScore, StringFormat='Score: {0:F0}'}"
                                   LineBreakMode="NoWrap"/>
                            <Label Text ="{Binding round, StringFormat='Round: {0:F0}'}"
                                   FontSize="12"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Text="Home" Clicked="goHome" />
    </StackLayout>
</ContentPage>