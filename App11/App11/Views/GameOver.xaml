<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App11.Views.GameOver">
    <StackLayout>
        <Label Text="YOU LOSE!!!!!! "
           VerticalOptions="Center" 
           HorizontalOptions="Center" 
           FontSize ="32"/>
        <Label Text= "You made it to round:" HorizontalOptions="Center"  FontSize ="16"/>
        <Label Text="{Binding round}" HorizontalOptions="Center" FontSize ="20"/>
        <Label Text= "Your score was:" HorizontalOptions="Center"  FontSize ="16"/>
        <Label Text="{Binding currScore}" HorizontalOptions="Center" FontSize ="20"/>
        <Button Text="Home" Clicked="goHome" />
        <Button Text="Score" Clicked="goScore" />
    </StackLayout>
   
</ContentPage>