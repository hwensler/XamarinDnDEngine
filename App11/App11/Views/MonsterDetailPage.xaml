<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App11.Views.MonsterDetailPage" 
               Title="{Binding Title}">
    <ContentPage.ToolbarItems>
        <ToolbarItem Name="Update" Clicked="OnUpdateClick" />
        <ToolbarItem Name="Delete" Clicked="OnDeleteClick" />
    </ContentPage.ToolbarItems>
    <StackLayout Spacing="20" Padding="15">
        <Image WidthRequest ="50" HeightRequest ="50"  Source="{Binding Mon.Image}" HorizontalOptions="Center"/>
        <Label Text="{Binding Mon.Name}" FontSize="Medium"             
            VerticalOptions = "Center"
            HorizontalOptions = "Center"/>
        <Label Text="{Binding Mon.Description}" FontSize="Medium"/>

    </StackLayout>
</ContentPage>