<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App11.Views.ItemDetailPage"
             Title="{Binding Title}">
    <!--<ContentPage.ToolbarItems>
        <ToolbarItem Name="Update" Clicked="OnUpdateClick" />
        <ToolbarItem Name="Delete" Clicked="OnDeleteClick" />
    </ContentPage.ToolbarItems>-->
    <ScrollView>
        <StackLayout Spacing="10" Padding="5">
            <Image WidthRequest ="100" HeightRequest ="100" Source="{Binding Item.image}"/>
            <Label Text="{Binding Item.Name}" FontSize="Large"/>
            <Label Text="Description: " FontSize="Medium" />
            <Label Text="{Binding Item.Description}" FontSize="Small"/>
            <Label Text="Strength: " FontSize ="Medium" />
            <Label Text="{Binding Item.Strength}" FontSize="Small"/>
            <Label Text="Durability: " FontSize ="Medium" />
            <Label Text="{Binding Item.ItemCounter}" FontSize="Small"/>
            <Label Text="Created by: " FontSize ="Medium" />
            <Label Text="{Binding Item.creator}" FontSize="Small"/>
        </StackLayout>
    </ScrollView>
</ContentPage>