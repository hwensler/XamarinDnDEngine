<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App11.Views.CharacterPage" 
             Title="Character List">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="New Character" Clicked="OnCharacterAdded" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
<!--            <Image Source="dnd.png" />-->
            <ListView x:Name="listView" Margin="20" ItemSelected="OnListCharacterSelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal">
                                <Image WidthRequest ="50" HeightRequest ="50"  Source="{Binding Image}" HorizontalOptions="LayoutOptions.Start"/>
                                <Label Text="{Binding Name}" LineBreakMode="NoWrap" FontAttributes="Bold" FontSize="17" HorizontalOptions="Fill"/>
                                <Label Text="{Binding Level, StringFormat='Lv: {0:F0}'}" LineBreakMode="NoWrap" FontSize="12" />
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>


